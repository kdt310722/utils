{
    "name": "@kdt310722/utils",
    "type": "module",
    "version": "0.0.6",
    "packageManager": "pnpm@9.0.6",
    "description": "A collection of utility functions for JavaScript / TypeScript application",
    "author": "Diep Dang <kdt310722@gmail.com>",
    "license": "MIT",
    "homepage": "https://github.com/kdt310722/utils",
    "repository": "github:kdt310722/utils",
    "bugs": {
        "email": "kdt310722@gmail.com",
        "url": "https://github.com/kdt310722/utils/issues"
    },
    "sideEffects": false,
    "exports": {
        ".": {
            "types": "./index.d.ts",
            "require": "./index.cjs",
            "default": "./index.js"
        },
        "./*": {
            "types": "./*/index.d.ts",
            "require": "./*/index.cjs",
            "default": "./*/index.js"
        }
    },
    "main": "index.js",
    "types": "index.d.ts",
    "files": [
        "*"
    ],
    "publishConfig": {
        "access": "public",
        "directory": "dist"
    },
    "scripts": {
        "dev": "vitest watch",
        "build": "rimraf dist && tsup && tsc --project ./tsconfig.build.json",
        "test": "vitest run",
        "coverage": "vitest run --coverage",
        "release": "tsx scripts/release.ts && changelogen gh release && pnpm publish",
        "up": "ncu -i",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "preinstall": "npx only-allow pnpm",
        "prepare": "simple-git-hooks",
        "prepublishOnly": "pnpm build"
    },
    "dependencies": {
        "json5": "^2.2.3",
        "p-retry": "^6.2.0",
        "serialize-error": "^11.0.3"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.3.0",
        "@commitlint/config-conventional": "^19.2.2",
        "@kdt310722/eslint-config": "^0.0.5",
        "@kdt310722/tsconfig": "^1.0.0",
        "@swc/core": "^1.5.2",
        "@types/node": "^20.12.7",
        "@vitest/coverage-v8": "^1.5.2",
        "changelogen": "^0.5.5",
        "eslint": "^8.57.0",
        "execa": "^8.0.1",
        "fast-glob": "^3.3.2",
        "lint-staged": "^15.2.2",
        "npm-check-updates": "^16.14.20",
        "only-allow": "^1.2.1",
        "rimraf": "^5.0.5",
        "simple-git-hooks": "^2.11.1",
        "tsup": "^8.0.2",
        "tsx": "^4.7.3",
        "typescript": "^5.4.5",
        "vitest": "^1.5.2"
    },
    "commitlint": {
        "extends": "@commitlint/config-conventional"
    },
    "simple-git-hooks": {
        "commit-msg": "npx --no -- commitlint --edit ${1}",
        "pre-commit": "npx lint-staged"
    },
    "lint-staged": {
        "*": "eslint --fix"
    }
}
